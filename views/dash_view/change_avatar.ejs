<div class="main-content side-content pt-0">
    <div class="main-container container-fluid">
        <div class="inner-body">
            <div id="mobileshow" class="see"></div>
            <div class="sees hide-mobile"></div>


            <!--Row-->

<div class="row">
                                    
                                    
                                    
                                                               
                                         
                <% if (success && success.length > 0) { %>
    <div class="alert alert-success" id="flash-success">
        <%= success %>
    </div>
<% } %>
<% if (error && error.length > 0) { %>
    <div class="alert alert-danger" id="flash-error">
        <%= error %>
    </div>
<% } %>
<script>
    setTimeout(function() {
        var success = document.getElementById('flash-success');
        if (success) success.style.display = 'none';
        var error = document.getElementById('flash-error');
        if (error) error.style.display = 'none';
    }, 4000);
</script>

                       
<form id="avatarForm" action="/account/user/changeavatar" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-12 g-3">
            <b>   Upload Picture </b> <br><br>
            <input type="file" class="file" name="avatar" accept="image/*" required> <br>
                    <p class="help-block">Only jpg, jpeg, png and gif file with maximum size of 2MB is allowed.</p>
                    <input type="text" name="username" value="<%= user?.username %>" hidden>
                    <button type="submit" class="btn btn-info"><i class="edit icon"></i>Change Picture </button>

                </div>
    
  </div>

